<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_up_load"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="be.kuleuven.softdev.hehuang.pokepelican.UpLoad">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/selectImageToUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image" />

        <ImageView
            android:id="@+id/imageToUplaod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/etUplaodNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the name of the item" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <EditText
                android:id="@+id/etItemPrice"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:hint="Enter the Price of the item"
                android:layout_weight="0.87" />

            <TextView
                android:text="Euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_margin="7dp"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/selectcatagory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Select Catagory"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/spItemCatagory"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/selectcatagory"></Spinner>

            <TextView
                android:id="@+id/blank"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_below="@+id/selectcatagory" />

            <TextView
                android:id="@+id/selectlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blank"
                android:layout_gravity="left"
                android:text="Select Location"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/spItemLocation"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/blank"
                android:layout_toRightOf="@+id/selectlocation"></Spinner>

        </RelativeLayout>

        <EditText
            android:id="@+id/etItemDiscribtion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the Discribtion of the item" />


        <Button
            android:id="@+id/bUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uplaod" />


    </LinearLayout>


</ScrollView>
